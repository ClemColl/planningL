<%= simple_form_for(@event_type, remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: "Nom de la carte", placeholder: "Montage Vector Petit Cutter" %>
    <%= f.fields_for :fields do |builder| %>
      <%= render 'field_fields', f: builder%>
    <% end %>
    <%= link_to_add_fields "Ajouter un champ", f, :fields %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Valider" %>
  </div>
<% end %>
