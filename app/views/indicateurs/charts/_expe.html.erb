<script>
chartOptions = {
    responsive: false,
    maintainAspectRatio: false,
    scales: {
        yAxes: [{
            gridLines: { display: false },
            ticks: {
                max: 100,
                min: 90,
                stepSize: 2,
                callback: function(value, index, values) {
                    return value + '%'
                }
            }
        }],
        xAxes: [
            {
            barThickness: 20,
            offset: true,
            gridLines: { offsetGridLines: true, display: false }
            }
        ],
    },
    elements: { line: { tension: 0 }, point: { radius: 3 }},
    legend: {display: false},
    tooltips: {display: false},
    title: { display: true, text: 'Taux Exp√©dition Equipement', fontSize: 20, fontColor: '#333333' }
}

var ctx = document.getElementById('expe').getContext('2d');
var expe = new Chart(ctx, {
    data: {
        labels: <%= raw @date_range %>,
        datasets: [
        {
        label: 'Objectif',
        type: 'line',
        fill: false,
        radius: 0,
        data: <%= @equip_obj %>,
        borderColor: 'black',
        backgroundColor: 'black'
        },
        {
        label: 'Expe',
        type: 'bar',
        data: <%= @equip %>,
        backgroundColor: ['green', 'green', 'green', 'green', 'green', 'green', 'green', 'green', 'green', 'green', 'green', 'green', 'green'],
        datalabels: {
                rotation: 270,
                anchor: 'top',
                align: 'bottom',
                offset: 30
            }
        }]
    },
    options: chartOptions
    })


var colorChangeValue = <%= @equip_obj.last %>
var dataset = expe.data.datasets[1]
for (var i = 0; i < dataset.data.length; i++) {
    if (dataset.data[i] < colorChangeValue) {
        dataset.backgroundColor[i] = 'red'
    }
}

expe.update()
</script>