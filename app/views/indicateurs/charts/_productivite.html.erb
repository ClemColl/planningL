<script>
chartOptions = {
    responsive: false,
    maintainAspectRatio: false,
    scales: {
        yAxes: [{
            ticks: {
                max: 120,
                min: 70,
                stepSize: 10,
                callback: function(value, index, values) {
                    return value + '%'
                }
            },
            gridLines: { display: false }
        }],
        xAxes: [{
            barThickness: 20,
            offset: true,
            gridLines: { offsetGridLines: true, display: false }
        }],
    },
    elements: { line: { tension: 0 }, point: { radius: 0 }},
    legend: { display: false },
    tooltips: { display: false },
    title: { display: true, text: 'Productivit√© service Fabrication', fontSize: 20, fontColor: '#333333' },
    plugins: {
        datalabels: {
            align: 'top',
            display: function(context) {
                return context.dataset.data[context.dataIndex]
            }
        }
    }
}

var ctx = document.getElementById('prod').getContext('2d');
var prod = new Chart(ctx, {
    data: {
        labels: <%= raw @date_range %>,
        datasets: [{
            type: 'line',
            fill: false,
            data: <%= raw @prod_obj %>,
            borderColor: 'black',
            backgroundColor: 'black',
            datalabels: {
                // align: 'bottom',
                // offset: 10,
                // color: 'black',
                display: function(context, value) {
                    return 0
                }
            }
        },
        {
            type: 'bar',
            data: <%= raw @prod %>,
            backgroundColor: ['green', 'green', 'green', 'green', 'green', 'green', 'green', 'green', 'green', 'green', 'green', 'green', 'green'],
            datalabels: {
                rotation: 270,
                anchor: 'top',
                align: 'bottom',
                offset: 10
            }
        }]
    },
    options: chartOptions
})

var colorChangeValue = <%= @prod_obj.first %>
var dataset = prod.data.datasets[1]
for (var i = 0; i < dataset.data.length; i++) {
    if (dataset.data[i] < colorChangeValue) {
        dataset.backgroundColor[i] = 'red'
    }
}

prod.update()
</script>