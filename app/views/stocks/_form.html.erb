<%= simple_form_for(@stock) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :week, label: "Numéro de semaine", input_html: { value: @stock.week || Date.today.cweek-1 } %>
    <%= f.input :sma, label: "Stock montant attendu" %>
    <%= f.input :smc, label: "Stock montant courant" %>
    <%= f.input :rma, label: "Réception montant attendu" %>
    <%= f.input :rmc, label: "Réception montant courant" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Enregistrer" %>
    <%= link_to 'Retour', suivi_path, class: "btn btn-default" %>
  </div>
<% end %>
