<%= simple_form_for(@temps_fab) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :week, label: 'Numéro de semaine', input_html: { value: @temps_fab.week || Date.today.cweek-1 } %>
    <%= f.input :tp, label: 'Temps passé en résolution de problème' %>
    <%= f.input :tp_last, label: 'Temps passé 2016' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Enregistrer' %>
    <%= link_to 'Retour', suivi_path, class: 'btn btn-default' %>
  </div>
<% end %>
